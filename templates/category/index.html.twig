{% extends 'base.html.twig' %}

{% block title %}MyBeers || Liste des catégories
{% endblock %}

{% block body %}
	<h1>Liste des catégories</h1>
	<div class="row">
		{% for category in categories %}
			<div class="card bg-dark text-white col-md-3">
				<img class="card-img" src="{{category.image}}" alt="Card image">
				<div class="card-img-overlay">
					<h5 class="card-title">{{category.name}}</h5>
					<div class="btn-group">
						<a class="btn btn-danger" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
						<a class="btn btn-success" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
					</div>
				</div>
			</div>
		{% else %}
			<div class="col">Il n'y a rien içi mais n'hésitez pas à ajouter une catégorie de Bière</div>
		{% endfor %}
	</div>
	<div class="row">
		<a class="btn btn-success" href="{{ path('category_new') }}">Ajouter une catégorie</a>
	</div>
{% endblock %}
